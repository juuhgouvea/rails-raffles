<% content_for :title do %>
  Rifas
<% end %>

<div class="page-header">
  <h1>Rifas</h1>
  <%= link_to new_raffle_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Nova Rifa
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Título</th>
        <th>Descrição</th>
        <th>Sorteio previsto para</th>
        <th>Início das vendas em</th>
        <th>Fim das vendas em</th>
        <th>Sorteado em</th>
        <th>Valor do bilhete</th>
        <th>Usuário</th>
        <th>Tipo</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @raffles.each do |raffle| %>
        <tr>
          <td><%= raffle.title %></td>
          <td><%= raffle.description %></td>
          <td><%= raffle.initial_draw_date&.to_s(:br_format) %></td>
          <td><%= raffle.start_sale_date&.to_s(:br_format) %></td>
          <td><%= raffle.end_sale_date&.to_s(:br_format) %></td>
          <td><%= raffle.draw_date&.to_s(:br_format) %></td>
          <td><%= raffle.ticket_price %></td>
          <td><%= raffle.user %></td>
          <td><%= raffle.kind %></td>
          <td>
            <%= link_to raffle, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_raffle_path(raffle), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to raffle, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>