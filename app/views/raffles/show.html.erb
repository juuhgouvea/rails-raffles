<% content_for :title do %>
  Detalhes da Rifa
<% end %>

<div class="page-header">
  <h1>Detalhes da Rifa</h1>
  <div>
    <%= link_to edit_raffle_path(@raffle), class: 'btn btn-success' do %>
      <%= icon 'fas', 'edit' %>
      Editar
    <% end %>
    <%= link_to raffles_path, class: 'btn btn-outline-secondary' do %>
      <%= icon 'fas', 'bars' %>
      Voltar
    <% end %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt>Título:</dt>
  <dd><%= @raffle.title %></dd>

  <dt>Descrição:</dt>
  <dd><%= @raffle.description %></dd>

  <dt>Sorteio previsto para:</dt>
  <dd><%= @raffle.initial_draw_date.strftime("%d/%m/%Y %H:%M") %></dd>

  <dt>Início das vendas em:</dt>
  <dd><%= @raffle.start_sale_date.strftime("%d/%m/%Y %H:%M") %></dd>

  <dt>Fim das vendas em:</dt>
  <dd><%= @raffle.end_sale_date.strftime("%d/%m/%Y %H:%M") %></dd>

  <dt>Sorteado em:</dt>
  <dd><%= @raffle.draw_date.strftime("%d/%m/%Y %H:%M") unless @raffle.draw_date.nil? %></dd>

  <dt>Valor do bilhete:</dt>
  <dd><%= @raffle.ticket_price %></dd>

  <dt>Usuário:</dt>
  <dd><%= @raffle.user %></dd>

  <dt>Tipo:</dt>
  <dd><%= @raffle.kind %></dd>

</dl>
