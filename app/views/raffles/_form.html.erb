
<%= simple_form_for @raffle do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :initial_draw_date %>
    <%= f.input :start_sale_date %>
    <%= f.input :end_sale_date %>
    <%= f.input :draw_date %>
    <%= f.input :ticket_price %>
    <%= f.association :user %>
    <%= f.association :kind %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Raffle' : 'Atualizar Raffle', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
